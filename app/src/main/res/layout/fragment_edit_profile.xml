<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="uk.ac.tees.w9312536.PodMe.ui.editprofile.EditProfileFragment">

    <!-- Name -->

    <LinearLayout
        android:id="@+id/linearLayoutProfileEditName"
        android:layout_width="match_parent"
        android:layout_height="751dp"
        android:background="#ffffff"
        android:orientation="vertical">


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="1dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_account_circle"
            app:civ_border_color="@color/purple_700"
            app:civ_border_width="4dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/change_picture"
            android:layout_width="252dp"
            android:layout_height="34dp"
            android:layout_below="@+id/loginLinearLayout"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="@string/change_profile_picture"
            android:textAlignment="center"
            android:textColor="@color/purple_200"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_text_profile_edit_name"
            android:layout_width="347dp"
            android:layout_height="47dp"
            android:layout_gravity="center"

            android:hint="@string/edit_name"
            android:textColorHint="@color/purple_200"
            android:maxLength="30"
            android:minHeight="20dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/Username"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_username"
            android:layout_width="347dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:hint="@string/edit_username"
            android:textColorHint="@color/purple_200"
            android:maxLength="30"
            android:minHeight="20dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/bio"
            android:layout_width="347dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/Bio"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_bio"
            android:layout_width="347dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:hint="@string/edit_bio"
            android:textColorHint="@color/purple_200"
            android:maxLength="30"
            android:minHeight="20dp"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_profile_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/save" />


    </LinearLayout>


</FrameLayout>